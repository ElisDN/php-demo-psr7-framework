{
    "config": {
        "sort-packages": true
    },
    "require": {
        "php": ">=7.1.0",
        "ext-PDO": "^7.1",
        "aura/router": "^3.1",
        "dasprid/container-interop-doctrine": "^1.1",
        "monolog/monolog": "^1.23",
        "psr/container": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-server-middleware": "^1.0",
        "psr/log": "^1.0",
        "symfony/console": "^4.1",
        "twig/twig": "^2.4",
        "zendframework/zend-config-aggregator": "^1.0",
        "zendframework/zend-diactoros": "^1.7",
        "zendframework/zend-servicemanager": "^3.3",
        "zendframework/zend-stratigility": "^3.0"
    },
    "require-dev": {
        "filp/whoops": "^2.2",
        "phpunit/phpunit": "^6.4",
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App/",
            "Framework\\": "src/Framework/",
            "Infrastructure\\": "src/Infrastructure/",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "serve": "php -S 0.0.0.0:8080 -t public",
        "check": [
            "@cs-check",
            "@test"
        ],
        "test": "phpunit --colors=always",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "app": "php bin/app.php --ansi",
        "doctrine": "doctrine --ansi",
        "development-enable": "ln -sr config/autoload/development.local.php.dist config/autoload/development.local.php",
        "development-disable": "rm config/autoload/development.local.php"
    }
}
